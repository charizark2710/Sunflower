{
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "make",
            "args": [
                "config=debug",
                "-C",
                "./build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "dependsOn": [
                "pre-build"
            ]
        },
        {
            "type": "shell",
            "label": "pre-build",
            "command": "./premake5",
            "args": [
                "gmake2"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task for premake"
        },
        {
            "type": "shell",
            "label": "run",
            "command": "cd bin && ./${workspaceFolderBasename}",
            "detail": "Run",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "build"
            ]
        }
    ],
    "version": "2.0.0"
}